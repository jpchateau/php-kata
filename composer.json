{
    "name": "php-kata",
    "description": "PHP Kata skeleton",
    "keywords": ["PHP", "kata", "coding dojo", "TDD", "OOP"],
    "homepage": "https://github.com/jpchateau/php-kata",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "phpspec/prophecy": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
