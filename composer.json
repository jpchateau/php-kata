{
    "name": "php-kata",
    "description": "PHP Kata skeleton",
    "keywords": ["kata", "coding dojo", "TDD", "OOP"],
    "homepage": "https://github.com/jpchateau/php-kata",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpspec/prophecy": "^1.10"
    },
    "authors": [
        {
            "name": "Jean-Philippe Chateau",
            "email": "contact@jpchateau.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kata\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
