{
    "name": "kata/php",
    "description": "PHP Kata skeleton",
    "keywords": ["kata", "coding dojo", "TDD", "OOP"],
    "homepage": "https://github.com/jpchateau/php-kata",
    "type": "library",
    "require": {
        "php": "^7",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "phpspec/prophecy": "^1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jean-Philippe Chateau",
            "email": "contact@jpchateau.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kata\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
